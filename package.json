{
  "name": "smartclide-perftestgen",
  "displayName": "SmartCLIDE Performance Test Generator",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:perf-tests-generate-command",
    "onCommand:perf-tests-pipeline-command"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "perf-tests-generate-command",
        "title": "SmartCLIDE: Generate performance test script..."
      },
      {
        "command": "perf-tests-pipeline-command",
        "title": "SmartCLIDE: Add performance test phase to pipeline..."
      }
    ],
    "configuration": {
      "title" : "Smartclide",
      "properties": {
        "smartclide.performanceTestGenerator.url": {
          "default": "http://localhost:8080/generateTest",
          "type": "string",
          "pattern": "https?://.+",
          "scope": "window",
          "description": "SmartCLIDE Performance test generation service URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.32.0",
    "glob": "^8.0.3",
    "mocha": "^10.2.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.2",
    "webpack": "^5.82.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "node-fetch": "3.2.10",
    "js-yaml": "^4.1.0",
    "@types/js-yaml": "4.0.5"
  }
}
